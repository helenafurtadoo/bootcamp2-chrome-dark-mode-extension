{
    "manifest_version" : 3,
    "name" : "Dark mode extension",
    "version" : "0.1.1",
    "description" : "Ativa o modo escuro em p√°ginas web",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Ativar/Desativar Dark Mode",
        "default_icon": {
            "16": "img/icon.png",
            "32": "img/icon.png",
            "48": "img/icon.png",
            "128": "img/icon.png"
        }
    },
    "icons": {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "permissions": ["scripting", "tabs"],
    "host_permissions": ["<all_urls>"]
}